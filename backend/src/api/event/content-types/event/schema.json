{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    },
    "ShortDescription": {
      "type": "text",
      "required": true
    },
    "Description": {
      "type": "blocks",
      "required": true
    },
    "StartDate": {
      "type": "datetime",
      "required": true
    },
    "EndDate": {
      "type": "datetime",
      "required": true
    },
    "Location": {
      "type": "string",
      "required": true
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "Banner": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "conference",
        "festival",
        "expo",
        "summit",
        "workshop-series",
        "meetup",
        "webinar"
      ],
      "required": true
    },
    "accessMode": {
      "type": "enumeration",
      "enum": [
        "open",
        "registration",
        "ticketed"
      ],
      "required": true,
      "default": "open"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "Status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "live",
        "completed",
        "cancelled"
      ],
      "required": true,
      "default": "draft"
    },
    "sessions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::session.session",
      "mappedBy": "event"
    },
    "sponsors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::sponsor.sponsor",
      "mappedBy": "events"
    },
    "ticketCategories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::ticket-category.ticket-category",
      "mappedBy": "allowedEvents"
    },
    "venue": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::venue.venue",
      "inversedBy": "events"
    },
    "organizers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::organizer.organizer",
      "inversedBy": "events"
    },
    "organizations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::organization.organization",
      "inversedBy": "events"
    },
    "faqs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::faq.faq",
      "mappedBy": "event"
    },
    "contactMessages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::contact-message.contact-message",
      "mappedBy": "event"
    }
  }
}
